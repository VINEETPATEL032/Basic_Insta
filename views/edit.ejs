<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
  </head>
  <style>
    #btn{
      margin-left: 46%;
      padding: 15px 40px;
    }
  </style>
  <body>
    <div class="container py-3">
      <h3>Update Your Account</h3>
      <br>
      <form action="/update" method="post">
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Name</label>
          <input type="text" class="form-control" placeholder="Enter Your Name" name="name" value="<%= founduser.name %>">
        </div>
        <div class="mb-3">
          <label for="exampeInputEmail1" class="form-label">Username</label>
          <input id="eusername" type="text" class="form-control" placeholder="Enter Your Username" name="username" value="<%= founduser.username %>">
        </div>
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Age</label>
          <input disabled type="text" class="form-control" placeholder="Enter Your Age" name="age" value="<%= founduser.age %>">
        </div>
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Email</label>
          <input disabled type="email" class="form-control" placeholder="Enter Your Email" name="email" value="<%= founduser.email %>">
        </div>
        <button id="btn" type="submit" class="btn btn-warning">Update Account</button>
      </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.5.0/axios.min.js" integrity="sha512-aoTNnqZcT8B4AmeCFmiSnDlc4Nj/KPaZyB5G7JnOnUEkdNpCZs1LCankiYi01sLTyWy+m2P+W4XM+BuQ3Q4/Dg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <script>
      var inp = document.querySelector("#eusername")
      inp.addEventListener("input",function(){
        if(inp.value.length > 0){
          axios.get(`/check/${inp.value}`)
        .then(function(data){
          if(data.data){
          inp.style.boxShadow = "0 0 0 0.25rem rgba(255,50,50,.7)";
          document.querySelector("#btn").setAttribute("disabled",true)
        }
        else{
          inp.style.boxShadow = "0 0 0 0.25rem rgba(13,110,253,.25)";
          document.querySelector("#btn").removeAttribute("disabled")
        }
        })
        }
      })
    </script>
  </body>
</html>