<% include ./partials/header.ejs %>
    <div class="container py-3">
      <h4 class="mb-4">Feed</h4>
      <p style="margin-top: -22px;">All posts from around the Bhopal.</p>
      <hr>
     <% allposts.reverse().forEach(function(post){ %>
      <div class="card mt-2" style="width: 45rem;">
          <div class="card-body">
            <h5 class="card-title" style="text-transform: capitalize;">@<%= post.userid.username %></h5>
            <p class="card-text"><%= post.data %></p>
            <p style="font-weight: 600;" class="text-primary"><%= post.likes.length %> Likes</p>
            <a href="/like/<%= post._id %>" class="btn <%= post.likes.indexOf(user.id) === -1 ? 'btn-primary' : 'btn-danger' %>"><%= post.likes.indexOf(user.id) === -1 ? "Like" : "Unlike" %></a>
          </div>
        </div>
      <% }) %>
    </div>
<% include ./partials/footer.ejs %>